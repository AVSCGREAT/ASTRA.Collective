{
  "private": true,
  "scripts": {
    "prepare": "lerna run prepare",
    "clean": "lerna run clean",
    "test": "jest",
    "format": "npx prettier --write \"**/*.js{,on}\" \"**/*.md\"  \"**/*.mdx\""
  },
  "workspaces": {
