    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@testing-library/react": "^9.4.0",
    "babel-jest": "^25.1.0",
    "jest": "^25.1.0",
    "lerna": "^3.14.1",
    "microbundle": "^0.11.0"
  },
  "jest": {
    "testMatch": [
      "**/packages/**/test/*.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  }
