    "@babel/preset-env": "^7.8.4",
    "@babel/preset-react": "^7.8.3",
    "@testing-library/react": "^9.4.0",
    "babel-jest": "^25.1.0",
    "jest": "^25.1.0",
    "lerna": "^3.20.2",
    "microbundle": "^0.12.0",
    "prettier": "2.0.5"
  },
  "jest": {
    "testMatch": [
      "**/packages/**/test/*.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  }
